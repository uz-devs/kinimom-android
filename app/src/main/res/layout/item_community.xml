<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCommunityUserImage"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/community_profile_img_01" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCommunityUserNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:text="박동국"
                android:textColor="#444444"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rvCommunityDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6sp"
                android:text="2021년 02월 08일 오후 05:50"
                android:textColor="#999999"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivCommunityMenu"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/board_btn_more" />

    </LinearLayout>

<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:layout_marginHorizontal="16dp"-->
<!--        android:background="#eeeeee" />-->

    <FrameLayout
        android:id="@+id/communityViewPagerParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/communityViewPager"
            android:layout_width="match_parent"
            android:layout_height="332dp"/>

        <TextView
            android:id="@+id/tvCommunityGalleryImageCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 1 / 5"
            android:textColor="@color/white"
            android:layout_margin="16dp"
            android:layout_gravity="end"
            android:paddingHorizontal="6dp"
            android:background="@drawable/rounded_rectangle_gray_alpha"/>

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/circleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="bottom|center_horizontal"/>

    </FrameLayout>


    <TextView
        android:id="@+id/tvCommunityContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="8sp"
        android:maxLength="2001"
        android:layout_marginHorizontal="16dp"
        android:maxLines="3"
        android:text="키니케어키니케어 키니케어 키니 키니케어키니케어 키니케어 키니키니케어키니케케어키니케어 키니케어 키니키니케어키니케어 키니케어 키케어...키니케어 키니키니케어키니케어 키니케어 키케어..."
        android:textColor="#666666"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tvCommunitySeeMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="8sp"
        android:text="@string/see_more"
        android:layout_marginHorizontal="16dp"
        android:textColor="#999999"
        android:textSize="16sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/community_ic_good_on" />

        <TextView
            android:id="@+id/tvCommunityLikeQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8sp"
            android:text="12"
            android:textColor="#999999"
            android:textSize="16sp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/community_ic_comment" />

        <TextView
            android:id="@+id/tvCommunityCommentQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8sp"
            android:text="5"
            android:textColor="#999999"
            android:textSize="16sp"
            android:textStyle="normal" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCommunityLikeIt"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/community_ic_good_on" />

            <TextView
                android:id="@+id/tvCommunityLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:text="@string/like"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="#eeeeee" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCommunityComment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/community_ic_comment" />

            <TextView
                android:id="@+id/tvCommunityComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:text="@string/comment"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>