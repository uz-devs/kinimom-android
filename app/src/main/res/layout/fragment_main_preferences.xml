<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_main_preferences"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="6sp"
            android:singleLine="true"
            android:text="@string/preferences"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/llNotice"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:paddingStart="18dp"
            android:paddingEnd="0dp"
            android:paddingVertical="18dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:src="@drawable/home_ic_top_notice"
            android:focusable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:lineSpacingExtra="6sp"
            android:singleLine="true"
            android:text="@string/notice"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="50dp"
            android:paddingEnd="17dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:src="@drawable/arrow_right"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/llNotification"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:paddingStart="18dp"
            android:paddingEnd="0dp"
            android:paddingVertical="12dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/setting_ic_pushsetting" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:lineSpacingExtra="6sp"
            android:singleLine="true"
            android:text="@string/notification_settings"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="50dp"
            android:paddingEnd="17dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:src="@drawable/arrow_right"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/llTermsOfUse"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:paddingStart="18dp"
            android:paddingEnd="0dp"
            android:paddingVertical="12dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/setting_ic_agreement_more" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:lineSpacingExtra="6sp"
            android:singleLine="true"
            android:text="@string/terms_of_use"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="50dp"
            android:paddingEnd="17dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:src="@drawable/arrow_right"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/llConfigGuide"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:paddingStart="18dp"
            android:paddingEnd="0dp"
            android:paddingVertical="12dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/setting_ic_serviceguide" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:lineSpacingExtra="6sp"
            android:singleLine="true"
            android:text="@string/config_guide"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="50dp"
            android:paddingEnd="17dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:src="@drawable/arrow_right"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/llVersionInfo"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:paddingStart="18dp"
            android:paddingEnd="0dp"
            android:paddingVertical="12dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/setting_ic_versioninfo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:lineSpacingExtra="6sp"
            android:singleLine="true"
            android:text="@string/version_info"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="50dp"
            android:paddingEnd="17dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:src="@drawable/arrow_right"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/llOpensourceLicense"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:paddingStart="18dp"
            android:paddingEnd="0dp"
            android:paddingVertical="12dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/setting_ic_opensource" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:lineSpacingExtra="6sp"
            android:singleLine="true"
            android:text="@string/opensource_license"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="50dp"
            android:paddingEnd="17dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:src="@drawable/arrow_right"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>