<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:padding="16dp"
            android:src="@drawable/home_ic_top_notice" />

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6sp"
            android:paddingHorizontal="16dp"
            android:singleLine="true"
            android:text="2021년 06월"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:padding="16dp"
            android:src="@drawable/home_ic_top_calender" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!--Week view-->
            <LinearLayout
                android:id="@+id/llWeekView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6sp"
                        android:text="일"
                        android:textColor="@color/gray"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6sp"
                        android:text="01"
                        android:textColor="@color/dark_gray"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6sp"
                        android:text="일"
                        android:textColor="@color/gray"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6sp"
                        android:text="02"
                        android:textColor="@color/dark_gray"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6sp"
                        android:text="일"
                        android:textColor="@color/gray"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6sp"
                        android:text="03"
                        android:textColor="@color/dark_gray"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6sp"
                        android:text="일"
                        android:textColor="@color/gray"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/top_img_today_enable" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6sp"
                        android:text="일"
                        android:textColor="@color/gray"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6sp"
                        android:text="05"
                        android:textColor="@color/dark_gray"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6sp"
                        android:text="일"
                        android:textColor="@color/gray"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6sp"
                        android:text="06"
                        android:textColor="@color/dark_gray"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6sp"
                        android:text="일"
                        android:textColor="@color/gray"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="6sp"
                        android:text="07"
                        android:textColor="@color/dark_gray"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>

            </LinearLayout>

            <!--Divider-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" />

            <!--Woman and man smth-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f9f9f9"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="4sp"
                    android:text="건강한 임신 준비"
                    android:textColor="#444444"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/login_button_background_enabled"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="0sp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="2dp"
                    android:text="가임기 21.01.01~21.01.01"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <FrameLayout
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/home_pregnancy_progress_circle"
                    android:layout_marginTop="24dp">

                    <ImageView
                        android:id="@+id/ivScore"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="28dp"
                        android:src="@drawable/home_ready_img_main_graph_06" />

                    <ImageView
                        android:id="@+id/ivWifeScore"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/wife_progress_8" />

                    <ImageView
                        android:id="@+id/ivHusbandScore"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/husband_progress_9" />

                    <TextView
                        android:id="@+id/tvScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:text="60%"
                        android:textColor="#ffffff"
                        android:textSize="43sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvScoreAbove9"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:text="이상"
                        android:paddingTop="84dp"
                        android:textColor="#ffffff"
                        android:textSize="26sp"
                        android:textStyle="bold" />


                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="40dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/home_ready_bg_btn_couple"
                            android:gravity="center"
                            android:lineSpacingExtra="8sp"
                            android:paddingHorizontal="46dp"
                            android:paddingVertical="12dp"
                            android:text="아내"
                            android:textColor="#f65151"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvWifeResults"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/home_droplet_button_background"
                            android:gravity="center_horizontal"
                            android:lineSpacingExtra="6sp"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:text="높음"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="normal" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/home_ready_bg_btn_couple"
                            android:gravity="center"
                            android:lineSpacingExtra="8sp"
                            android:paddingHorizontal="46dp"
                            android:paddingVertical="12dp"
                            android:text="남편"
                            android:textColor="@color/blue"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvHusbandResults"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/home_droplet_button_background_blue"
                            android:gravity="center_horizontal"
                            android:layout_gravity="end"
                            android:lineSpacingExtra="6sp"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:text="보통"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="normal" />

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <!--Divider-->
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="3sp"
                    android:text="커뮤니티 BEST" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/gvBestCommunities"
                    android:layout_width="match_parent"
                    android:numColumns="2"
                    android:padding="8dp"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <!--Divider-->
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="3sp"
                    android:text="오늘의 하루 영상" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/home_sample_ytb_thumb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="8sp"
                        android:text="만삭 임산부의 룩북 &amp; 쇼핑하울" />

                    <TextView
