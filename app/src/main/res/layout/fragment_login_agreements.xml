<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="28dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8sp"
        android:text="@string/plz_agree_to_terms_and_conditions"
        android:textColor="#666666"
        android:textSize="16sp"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/llAgreeToAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAgreeToAll"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/login_btn_agreement_check_disable" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="9sp"
            android:text="@string/agree_to_all"
            android:textColor="#222222"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/login_button_background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llTermsOfService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:background="?selectableItemBackground"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/ivTermsOfService"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/login_btn_agreement_check_disable" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:lineSpacingExtra="6sp"
                android:text="@string/required_terms_of_service"
                android:textColor="#777777"
                android:textSize="13sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/ivTermsOfServiceMore"
                android:layout_width="56dp"
                android:layout_height="20dp"
                android:scaleType="fitEnd"
                android:src="@drawable/arrow_right" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:background="?selectableItemBackground"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/ivPrivacyPolicy"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/login_btn_agreement_check_disable" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:lineSpacingExtra="6sp"
                android:text="@string/required_privacy_policy"
                android:textColor="#777777"
                android:textSize="13sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/ivPrivacyPolicyMore"
                android:layout_width="56dp"
                android:scaleType="fitEnd"
                android:layout_height="20dp"
                android:src="@drawable/arrow_right" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llSensitiveInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:background="?selectableItemBackground"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/ivSensitiveInformation"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/login_btn_agreement_check_disable" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:lineSpacingExtra="6sp"
                android:text="@string/sensitive_information"
                android:textColor="#777777"
                android:textSize="13sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/ivSensitiveInformationMore"
                android:layout_width="56dp"
                android:scaleType="fitEnd"
                android:layout_height="20dp"
                android:src="@drawable/arrow_right" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPersonalInfoCollection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:background="?selectableItemBackground"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/ivPersonalInfoCollection"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/login_btn_agreement_check_disable" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:lineSpacingExtra="6sp"
                android:text="@string/required_personal_info_collection_and_usage_agreement"
                android:textColor="#777777"
                android:textSize="13sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/ivPersonalInfoCollectionMore"
                android:layout_width="56dp"
                android:scaleType="fitEnd"
                android:layout_height="20dp"
                android:src="@drawable/arrow_right" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llConsentToUsePersonalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:background="?selectableItemBackground"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/ivConsentToUsePersonalInfo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/login_btn_agreement_check_disable" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:lineSpacingExtra="6sp"
                android:text="@string/required_consent_to_use_personal_info"
                android:textColor="#777777"
                android:textSize="13sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/ivConsentToUsePersonalInfoMore"
                android:layout_width="56dp"
                android:scaleType="fitEnd"
                android:layout_height="20dp"
                android:src="@drawable/arrow_right" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llConsentToThirdParty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:background="?selectableItemBackground"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/ivConsentToThirdParty"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/login_btn_agreement_check_disable" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:lineSpacingExtra="6sp"
                android:text="@string/required_consent_to_third_party_provision_of_accredation"
                android:textColor="#777777"
                android:textSize="13sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/ivConsentToThirdPartyMore"
                android:layout_width="56dp"
                android:scaleType="fitEnd"
                android:layout_height="20dp"
                android:src="@drawable/arrow_right" />
            
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvNext"
            android:background="?selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_gravity="end|bottom"
            android:textColor="@color/gray"
            android:lineSpacingExtra="4sp"
            android:text="@string/next"/>

    </FrameLayout>

</LinearLayout>