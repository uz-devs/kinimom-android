<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCommentUserImage"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/community_profile_img_01" />


        <TextView
            android:id="@+id/tvCommentNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:lineSpacingExtra="8sp"
            android:text="남궁민"
            android:textColor="#444444"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivCommentNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/community_ic_comment_new" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivCommentMenu"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/board_btn_more" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvCommentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:lineSpacingExtra="8sp"
        android:text="안녕하세요"
        android:textColor="#666666"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tvCommentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8sp"
        android:layout_marginLeft="54dp"
        android:text="October 18, 2055"
        android:layout_marginTop="4dp"
        android:textColor="#999999"
        android:textSize="10sp"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/llCommentLike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/ivCommentLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/community_ic_good_off" />

        <TextView
            android:id="@+id/tvCommentLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8sp"
            android:text="12"
            android:textColor="#999999"
            android:textSize="16sp"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>